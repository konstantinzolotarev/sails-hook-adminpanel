<% if (typeof value == 'undefined' && typeof field.model.defaultsTo !== 'undefined') { %>
    <% value = field.model.defaultsTo %>
<% } %>


<%# detection type %>
<% var type = field.config.type || field.model.type %>
<% type = type.toLowerCase() %>


<%# plain inputs %>
<% var inputTextTypes = ['string', 'password', 'date', 'datetime', 'integer', 'number', 'float'] %>
<% if (~inputTextTypes.indexOf(type)) { %>
    <% include fields/inputText %>
<% } %>


<%# boolean %>
<% if (type === 'boolean' || type === 'binary') { %>
    <% include fields/inputBoolean %>
<% } %>


<%# textarea %>
<% var inputTextAreaTypes = ['text', 'longtext', 'mediumtext' ] %>
<% if (~inputTextAreaTypes.indexOf(type)) { %>
    <% include fields/inputTextarea %>
<% } %>

<%# wysiwyg %>
<% var widgetWysiwygTypes = ['ckeditor', 'wysiwyg', 'texteditor', 'word'] %>
<% if (~widgetWysiwygTypes.indexOf(type)) { %>
    <% include fields/widgetWysiwyg %>
<% } %>

<%# jsoneditor %>
<% var widgetJsonEditorTypes = ['jsoneditor', 'json', 'array', 'object'] %>
<% if (~widgetJsonEditorTypes.indexOf(type)) { %>
    <% include fields/widgetJsonEditor %>
<% } %>


<%# ace %>
<% var widgetAceTypes = ['ace', 'html', 'xml', 'aceeditor'] %>
<% if (~widgetAceTypes.indexOf(type)) { %>
    <% include fields/widgetAce %>
<% } %>


<%# FileUploader %>
<% var widgetAceTypes = ['image','images', 'file', 'files'] %>
<% if (~widgetAceTypes.indexOf(type)) { %>
    <% include fields/widgetFileUploader %>
<% } %>

<%# EditNavigation %>
<% var widgetAceTypes = ['menu','navigation'] %>
<% if (~widgetAceTypes.indexOf(type)) { %>
    <% include fields/widgetEditNavigation %>
<% } %>

<%# EditSchedule %>
<% var widgetAceTypes = ['schedule','worktime'] %>
<% if (~widgetAceTypes.indexOf(type)) { %>
    <% include fields/widgetEditSchedule %>
<% } %>



<% if (type == 'association') { %>
    <% include fields/inputAssociation %>
<% } %>

<% if (type == 'association-many') { %>
    <% include fields/inputAssociationMany %>
<% } %>
