mixin pagination(instancePath, page, total, limit, requestProcessor)
  - if (!page) page = 1;
  - page = parseInt(page);
  - if (!limit) limit = 20;

  span #{((page-1)*limit)}-#{(page*limit)} of #{total}

  if page > 1
    |  &nbsp;
    a(href='./#{instancePath}?#{requestProcessor.addGetParams(req, {page: (page - 1)})}')
      clr-icon(shape="rewind")
  if ((page + 1) * limit) <= total
    |  &nbsp;
    a(href='./#{instancePath}?#{requestProcessor.addGetParams(req, {page: (page + 1)})}')
      clr-icon(shape="fast-forward")
