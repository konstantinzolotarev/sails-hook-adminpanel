mixin showValue(key, field, value)
  case field.model.type
    when 'boolean'
      if value
        i.glyphicon.glyphicon-ok-sign
      else
        i.glyphicon.glyphicon-remove-sign
    when 'text'
      p !{value}

    when 'association'
      if (typeof value === 'string')
        | #{value}
      else
        | #{value[field.config.displayField]}

    default
      | #{value}
